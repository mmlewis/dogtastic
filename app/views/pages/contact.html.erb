<% provide(:title, 'Contact') %>
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Contact Me</h2>
        <hr class="star-primary">
      </div>
    </div>
    <!--<h3>Fill out the form below and I'll be in contact with you right away</h3>-->
    <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
      <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
      <%= form_for @page, html: {id: "contactForm", name: "sentMessage"} do |f| %>

              <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
              </div>
                </div>

              <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :email %>
              <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
              </div>
                </div>

              <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :phone %>
              <%= f.text_field :phone, class: "form-control", placeholder: "Phone" %>
              </div>
                </div>

<!--              <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :about, class: "form-control", placeholder: "What you are looking for?", size: "60x12" %>
              <%= check_box_tag(:walking) %>
              <%= label_tag(:walking, "Walking") %>

              <%= check_box_tag(:washing) %>
              <%= label_tag(:washing, "Washing") %>

              <%= check_box_tag(:watching) %>
              <%= label_tag(:watching, "Washing") %>
                  </div>
                </div>-->

              <div class="row control-group">
                <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.label :message %>
              <%= f.text_area :message, class: "form-control", placeholder: "Message"%>
                </div>
               </div>

<br />
              <div id="success"></div>
              <div class="row">
                <div class="form-group col-xs-12">
              <%= f.submit "Submit", class: "btn btn-success btn-lg" %>
                </div>
            </div>
      <% end %>
    </div>
      </div>
  </div>
</section>